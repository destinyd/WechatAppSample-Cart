.cart-item{
  /*width: 100%;*/
  padding: 10rpx 20rpx;
  height: 70rpx;
  line-height: 50rpx;
  vertical-align: middle;
}
.cart-item .name{
    float: left;
    vertical-align: middle;
    line-height: 50rpx;
}
.cart-item .amount, .cart-item .price{
    float: right;
    vertical-align: middle;
    line-height: 50rpx;
}
.cart-item .amount{
    width: 200rpx;
    text-align: right;
    padding-left: 10rpx; 
}
.cart-item .icon{
    width: 60rpx;
    height: 60rpx;
}
.cart-item .price{
    width: 100rpx;
    text-align: right;
    padding-left: 10rpx;
}
.page-cart .total{
    color: red;
    font-size: 1.2rem;
}